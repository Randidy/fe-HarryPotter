<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET (Andrea Rebatta)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background: linear-gradient(to right, #a47552, #481315); font-family: 'Copperplate Gothic', sans-serif;">

        <div class="container ">

            @Html.ActionLink("Mundo Mágico", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    title="Alternar navegación" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between  ">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Tienda", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Actores", "Actores", "Tienda", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item dropdown " >
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                           aria-expanded="false">Mas</a>
                        <ul class="dropdown-menu" style="background:#aa6f44ff ; color:#ff0000;">
                            <li>@Html.ActionLink("Hechizos", "Hechizos", "Tienda", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Criaturas", "Criaturas", "Tienda", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Casas", "Casas", "Tienda", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>

    </nav>

    <style>
        .dropdown-item:hover {
            background: linear-gradient(to right, #9c671ea6, #6c3526);
            color: #ffffff;
            transition: background 0.3s ease; 
        }
    </style>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
