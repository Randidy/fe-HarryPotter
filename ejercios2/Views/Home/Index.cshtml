@{
    ViewBag.Title = "Home Page";
}

<body style="background-color: #382121f8; color: #1e0f0ff8; ">

    <h1 style="text-align: center; background: linear-gradient(to bottom, #8b5a2b, #5d4037, #3e2723); color: #f5deb3; font-family: 'Cinzel Decorative', 'Georgia', serif; text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.6); ">
        ¡Bienvenido al Encantador Mundo de Hogwarts!
    </h1>

    <main class="container">

        <section class="text-center mb-5" >

            <div style="margin: 15px; border-radius: 25px; overflow: hidden;" id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Controllers/Imagenes/banner1.jpg" class="d-block w-100" >
                    </div>
                    <div class="carousel-item">
                        <img src="~/Controllers/Imagenes/banner2.jpg" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Controllers/Imagenes/banner3.jpg" class="d-block w-100" >
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>

        <hr />

        <h3>Draco dormiens nunquam titillandus</h3>
        <p> (Nunca le hagas cosquillas a un dragón dormido)</p>


        <div class="row text-center">

            <section class="col-md-4 mb-4">

                <div style="background: linear-gradient( #9c671ea6, #6c3526); border: 2px solid #f1c232; box-shadow: 0 4px 8px rgba(241, 194, 50, 0.4); " class="card border-0 shadow-sm h-100">
                    <img src="~/Controllers/Imagenes/slide1.jpg" class="card-img-top img-fluid" style="height: 250px; object-fit: cover;" alt="Hechizos">
                    <div class="card-body">
                        <h2 style="color: #f5deb3;">Hechizos</h2>
                        <p style="color: #f5deb3;">Aprende los hechizos más famosos del universo de Harry Potter.</p>
                        <a class="btn magic-btn" href="@Url.Action("Hechizos", "Tienda")">Más información &raquo;</a>
                    </div>
                </div>

            </section>

            <section class="col-md-4 mb-4">

                <div style="background: linear-gradient(to right, #9c671ea6, #6c3526); border: 2px solid #f1c232; box-shadow: 0 4px 8px rgba(241, 194, 50, 0.4);" class="card border-0 shadow-sm h-100">

                    <img src="~/Controllers/Imagenes/slide9.jpg" class="card-img-top img-fluid" style="height: 250px; object-fit: cover;" alt="Criaturas Mágicas">
                    <div class="card-body">
                        <h2 style="color: #f5deb3;">Criaturas Mágicas</h2>
                        <p style="color: #f5deb3;">Descubre los seres mágicos que habitan en el mundo de Harry Potter.</p>
                        <a class="btn magic-btn" href="@Url.Action("Criaturas", "Tienda")">Más información &raquo;</a>
                    </div>
                </div>

            </section>

            <section class="col-md-4 mb-4">
                <div style="background: repeating-radial-gradient(#9c671ea6, #6c3526); border: 2px solid #f1c232; box-shadow: 0 4px 8px rgba(241, 194, 50, 0.4); " class="card border-0 shadow-sm h-100">
                    <img src="~/Controllers/Imagenes/slide8.jpg" class="card-img-top img-fluid" style="height: 250px; object-fit: cover;" alt="Casas de Hogwarts">
                    <div class="card-body">
                        <h2 style="color:#f5deb3;">Casas de Hogwarts</h2>
                        <p style="color: #f5deb3;">Conoce la historia y características de Gryffindor, Hufflepuff, Ravenclaw y Slytherin.</p>
                        <a class="btn magic-btn" href="@Url.Action("Casas","Tienda")">Más información &raquo;</a>
                    </div>
                </div>

            </section>

        </div>

    </main>

</body>

<style>
    .magic-btn {
        color: #f5deb3;
        border: 2px solid #f5deb3;
        font-family: Georgia, 'Times New Roman', Times, serif;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        background: transparent;
        padding: 10px 20px;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
    }

        .magic-btn:hover {
            background: #f5deb3;
            color: #3e2723;
            text-shadow: none;
        }

        h3,p,h2{
            font-family:Georgia, 'Times New Roman', Times, serif;
            text-align:center;
            color:antiquewhite;

        }
        p{
            margin-bottom:35px;
        }

        
</style>
